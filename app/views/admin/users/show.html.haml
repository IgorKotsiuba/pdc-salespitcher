- model_class = User
%h1= t '.title', :default => model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:email)
      \:
  %dd= @user.email
  %dt
    %strong
      = model_class.human_attribute_name(:first_name)
      \:
  %dd= @user.first_name
  %dt
    %strong
      = model_class.human_attribute_name(:last_name)
      \:
  %dd= @user.last_name
  %dt
    %strong
      = model_class.human_attribute_name(:phone_number)
      \:
  %dd= @user.phone_number
= link_to t('.back', default: t('helpers.links.back')), admin_users_path, class: 'btn btn-default'
= link_to t('.edit', default: t('helpers.links.edit')), edit_admin_user_path(@user), class: 'btn btn-default'
= link_to t('.destroy', default: t('helpers.links.destroy')), admin_user_path(@user), method: 'delete',
          data: { confirm: t('.confirm', default: t('helpers.links.confirm', default: 'Are you sure?')) }, class: 'btn btn-danger'
