- model_class = User
.row
  .col-sm-9
    %h1.pull-left= t '.title', default: model_class.model_name.human.pluralize.titleize
  .col-sm-3
    %h1.pull-right
      = link_to t('.new', default: t('helpers.links.new')), new_admin_user_path, class: 'btn btn-primary'
.table-responsive
  %table.table.table-striped
    %thead
      %tr
        %th= model_class.human_attribute_name(:id)
        %th= model_class.human_attribute_name(:email)
        %th= model_class.human_attribute_name(:first_name)
        %th= model_class.human_attribute_name(:last_name)
        %th= model_class.human_attribute_name(:phone_number)
        %th= t '.actions', default: t('helpers.actions')
    %tbody
      -  @users.each do |user|
        %tr
          %td= link_to user.id, admin_user_path(user)
          %td= user.email
          %td= user.first_name
          %td= user.last_name
          %td= user.phone_number
          %td
            = link_to t('.show', default: t('helpers.links.show')), admin_user_path(user), class: 'btn btn-default btn-xs'
            = link_to t('.edit', default: t('helpers.links.edit')), edit_admin_user_path(user), class: 'btn btn-default btn-xs'
            = link_to t('.destroy', default: t('helpers.links.destroy')), admin_user_path(user), method: :delete,                                                                                          |
              data: { confirm: t('.confirm', default: t('helpers.links.confirm', default: 'Are you sure?')) },
              class: 'btn btn-xs btn-danger'
