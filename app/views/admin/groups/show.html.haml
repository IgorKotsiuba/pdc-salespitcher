- model_class = Group
%h1= t '.title', default: model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:name)
      \:
  %dd= @group.name
  %dt
    %strong
      = model_class.human_attribute_name(:users)
      \:
  - @group.users.order(:id).each do |user|
    %dd= user.email

= link_to t('.back', default: t('helpers.links.back')), admin_groups_path, class: 'btn btn-default'
= link_to t('.edit', default: t('helpers.links.edit')), edit_admin_group_path(@group), class: 'btn btn-default'
= link_to t('.destroy', default: t('helpers.links.destroy')), admin_group_path(@group), method: 'delete',
          data: { confirm: t('.confirm', default: t('helpers.links.confirm', default: 'Are you sure?')) }, class: 'btn btn-danger'
